{%extends 'layout.njk'%}
    {%block content%}
        <h2>Gerenciar receitas</h2>
        <section class="container">
            {% for recipe in recipes %}
                <div class="card">
                    <img src="{{recipe.image}}" alt="imagem do prato">
                    <div class="info">
                        <p>{{recipe.title}}</p>
                        <p>por {{recipe.chef}}Chefe tal</p>
                        <a href="#">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </section>

    {%endblock%}